@using Manero.ViewModels

@model Manero.ViewModels.ProductPageViewModel

@{
    var ReviewsPage = new NavbarViewModel()
            {
                Burger = false,
                MiddleData = "All Reviews",
                ShoppingCart = true
            };
}

<partial name="/Views/Partials/NavbarPartials/_TopNavbarPartial.cshtml" model="ReviewsPage" />

<section class="reviews">
    <h2 class="m-5" style="text-align: center;">Reviews (@Model.Product.ProductName)</h2>

    @foreach (var review in Model.Reviews)
    {
        <div class="review-card container">
            <img src="~/static-images/review@(review.Id).jpg" alt="review-person-@(review.Id)">
            <div class="review-info">
                <div class="name-date-stars">
                    <div class="name-date">

                        <p class="review-date">@review.ReviewDate.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="review-stars">
                        @for (int i = 0; i < review.Rating; i++)
                        {
                            <a href=""><i class="fa-solid fa-star" style="color: #fbee00;"></i></a>
                        }
                        @for (int i = 0; i < (5 - review.Rating); i++)
                        {
                            <a href=""><i class="fa-thin fa-star" style="color: #fbee00;"></i></a>
                        }
                    </div>
                </div>
                <p class="review-text">@review.CommentText</p>
            </div>
        </div>
    }

    <h1 id="write-a-comment" class="m-3">Write a comment? <a asp-controller="LeaveReview" asp-action="Index"><i class="fa-solid fa-comment"></i></a></h1>
</section>



