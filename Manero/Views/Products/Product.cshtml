@using Manero.ViewModels;

@* Product details page *@

@model Manero.Models.Entities.ProductEntity

@{

    var rating = Model.Rating;

    var ProductPage = new NavbarViewModel()
            {
                Burger = false,
                MiddleData = "Manero",
                ShoppingCart = true
            };
}

<partial name="/Views/Partials/NavbarPartials/_TopNavbarPartial.cshtml" model="ProductPage" />

<section class="big-screen-product">

    <div class="product-img">
        <img src="@Model.ImageUrl" alt="product">
        <div class="product-img-navigation">
            <div class="ball"><i class="fa-solid fa-circle"></i></div>
            <div class="ball"><i class="fa-solid fa-circle"></i></div>
            <div class="ball"><i class="fa-solid fa-circle"></i></div>
        </div>
        <div class="product-img-border"></div>
    </div>

    <div class="product-details container">
        <div class="product-heading-heart">
            <h1>@Model.ProductName</h1>
            <a asp-controller="Wishlist" asp-action="Index"><i class="fa-light fa-heart" style="color: #626262;"></i></a>
        </div>
        <div class="raiting-stars">


            @for (int i = 0; i < rating; i++ )
            {
                <a href="#"><i class="fa-solid fa-star" style="color: #fbee00;"></i></a>
            }

            @for (int i = 0; i < (5 - rating); i++)
            {
                <a href="#"><i class="fa-thin fa-star" style="color: #fbee00;"></i></a>

            }
           
        @* Should show how many reviews there are *@
            <p>(4)</p>
        </div>
        <div class="product-price-quantity">
            <h1 class="product-price">$@Model.Price</h1>
            <div class="plus-minus-button">
                <a href="#"><i class="fa-regular fa-minus" style="color: #111111;"></i></a>
                <p>1</p>
                <a href="#"><i class="fa-regular fa-plus" style="color: #111111;"></i></a>
            </div>
        </div>
        <div class="product-size">
            <h3>Size</h3>
            <div class="sizes">
                <button>XS</button>
                <button>S</button>
                <button>M</button>
                <button>L</button>
                <button>XL</button>
                <button>XXL</button>
            </div>
        </div>
        <div class="product-color">
            <h3>Color</h3>
            <div class="product-colors">
                <button class="red"></button>
                <button class="ligt-blue"></button>
                <button class="beige"></button>
                <button class="dark-blue"></button>
                <button class="black"></button>
            </div>
        </div>
    </div>

</section>

<section class="product-description container">
    <h3>Description</h3>
    <p>@Model.Description</p>
</section>

<div class="review-button container">
    <button class="black-button">+ ADD TO CART</button>
</div>

@* Down here it should loop out the reviews connected to the Product *@

<partial name="/Views/Partials/_ReviewsPartial.cshtml" />
