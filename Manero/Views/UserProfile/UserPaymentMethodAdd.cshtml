@{
    //ViewData["Title"] = "My profile";
}

<head>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <script defer src="~/js/site.js"></script>
</head>

<section class="edit-card-header container">
    <div class="_title">
        <a asp-controller="UserProfile" asp-action="UserPaymentMethods"><i class="fa-solid fa-chevron-left"></i></a>
        <h5>@ViewData["Title"]</h5>
        <div></div>
    </div>
</section>

<section class="edit-card container">

    <div class="vertical-line"></div>
    <div class="d-flex justify-content-center">
        <div class="_card mt-3">
            <img src="/static-images/paymentcard.png" />
            <i class="fa-brands fa-cc-visa"></i>
            <p class="card-number">7741   6588   2123   6644</p>
            <p class="card-name">KRISTIN</p>
            <p class="expire">EXP.END</p>
        </div>
    </div>


</section>

<section class="card-details container">
    <form class="mb-3" method="post" novalidate>
        <div class="field-div mt-5">
            <div class="input-title">
                <p>NAME</p>
            </div>
            <input type="text" value="Kristin Watson" />
        </div>
        <div class="d-flex justify-content-between card-number">
            <div class="field-div">
                <div class="input-title">
                    <p>CARD NUMBER</p>
                </div>
                <input type="text" value="7741 6588 2123 6644" />
            </div>
            <button><i class="fa-light fa-camera"></i></button>
        </div>

        <div class="d-flex">
            <div class="field-div">
                <div class="input-title">
                    <p>MM/YY</p>
                </div>
                <input type="text" value="12/21" />
            </div>
            <div class="field-div">
                <div class="input-title">
                    <p>CVV</p>
                </div>
                <input type="password" value="CVV" />
            </div>
        </div>


        <button type="submit" class="black-button mt-5">SAVE CARD</button>
    </form>
</section>

