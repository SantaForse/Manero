
@model Manero.ViewModels.NavbarViewModel



<section class="top-navbar container">

@* Lets you swap beteen burger or arrow *@
    @if (Model.Burger == false)
    {
        @* Should take you back to the parent page *@
        <a href="" class="less-symbol" style="color: #111111;"><i class="fa-solid fa-angle-left"></i></a>
    } else
    {
        <button class="less-symbol" style="color: #111111;"><i class="fa-regular fa-bars-staggered"></i></button>
    }


@* Lets you choose what the middle display should be on each page *@
    @if (Model.MiddleData == "Manero")
    {
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/static-images/logo.png" alt="logo"></a>
    }else if (Model.MiddleData == "Search")
    {
        <div class="search-input second-navbar">
            <div class="search-button"><i class="fa-light fa-magnifying-glass"></i></div>
            <input type="text" class="input" placeholder="Search">
        </div>
    } else
    {
@* Maybe this one should automatically show the page title or something? *@
        <h3>@Model.MiddleData</h3>
    }


    <div class="shopping-bag-with-ball">
        
@* Lets you decide over displaying cart or not *@
        @if (Model.ShoppingCart == true)
        {
            <div class="orange-ball"><p>$0</p></div>
            <a href="" class="big-screen-symbols"><i class="fa-light fa-house-chimney"></i></a>
            <a href="" class="big-screen-symbols"><i class="fa-light fa-magnifying-glass"></i></a>
            <a href="" class="big-screen-symbols"><i class="fa-light fa-heart"></i></a>
            <a href="" class="big-screen-symbols"><i class="fa-light fa-circle-user"></i></a>
            <a asp-controller="Profile" asp-action="Cart" class="shopping-bag-symbol" style="color: #626262;"><i class="fa-light fa-bag-shopping"></i></a>
        }

    </div>
</section> 