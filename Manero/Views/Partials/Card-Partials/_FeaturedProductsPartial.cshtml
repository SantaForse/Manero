@model Manero.ViewModels.CardGridViewModel


<section class="best_sellers_section  ">
    <div class="container">
        <div class="best_sellers_title">
            <h1>@Model.Title</h1>
            <a asp-controller="@Model.ButtonLink" asp-action="Index">@Model.ButtonText <span>&#62;</span></a>
        </div>

        <!-- Same type of grid as "best sellers", but with different size settings -->
        <div class="small_card_slider">
            
            @{
                int nr = 0;
            }

            @while (nr < Model.CardNr)
            {
                nr++; 

                <!-- start of card -->
                <div class="product_card">
                    <div class="card_top">
                        <!-- can be changed, between classes:
                                "card_tag_new, card_tag_sale and card_tag_top".
                            see the options below -->
                        @if (nr == 2)
                        {
                            <div class="card_tag_new">NEW</div>
                        }
                        else if (nr == 3)
                        {
                            <div class="card_tag_sale">SALE</div>
                        }
                        else if (nr == 4)
                        {
                            <div class="card_tag_top">TOP</div>
                        }
                        else
                        {
                            <div class="card_tag"></div>
                        }


                        <img src="/static-images/stock-images/white-shoe.jpg" alt="product">
                        <div class="card_options">
                            <a asp-controller="Wishlist" asp-action="Index"><i class="fa-regular fa-heart"></i></a>
                            <a asp-controller="Shoppingcart" asp-action="Index"><i class="fa-regular fa-bag-shopping"></i></a>
                        </div>
                    </div>
                    <div class="card_bottom">
                        <div class="card_rating">
                            <div class="card_stars">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                            </div>
                            <p>(3)</p>
                        </div>

                        @* Should later go to individual shopping cards site... *@
                        <a asp-controller="Shopping" asp-action="Index" class="card_title">Prada shoe</a>
                        <div class="card_price">
                            <p>£20.9</p>
                            <p>£12.9</p>
                        </div>
                    </div>
                </div>
                <!-- end of card -->

            }

        </div>
    </div>
</section>