<section class="filter-section container">
    <div class="product-size">
        <h3>Size</h3>
        <div class="sizes">
            <button>XS</button>
            <button>S</button>
            <button>M</button>
            <button>L</button>
            <button>XL</button>
            <button>XXL</button>
        </div>
    </div>
    <div class="product-color">
        <h3>Color</h3>
        <div class="product-colors">
            <button class="red"></button>
            <button class="ligt-blue"></button>
